<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.prasnou.app.NewExFragment"
    >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/ex_numb_textview"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"

            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_dark"
            android:gravity="center"
            android:text="#123"
            />
        <TextView
            android:id="@+id/ex_type_label"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingRight="0dp"

            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_light"

            android:layout_toRightOf="@+id/ex_numb_textview"
            android:gravity="center"

            android:text="Ex name"
            />

        <Spinner
            android:id="@+id/sp_ex_type"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingRight="10dp"
            android:fontFamily="sans-serif-condensed"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/text_dark"

            android:layout_toRightOf="@+id/ex_type_label"
            android:gravity="center"

            />

        <View
            android:id="@+id/hrule"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_med"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/set_list_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header">
        <LinearLayout
            android:id="@+id/set_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_list_wrapper"
        android:orientation="vertical">
        <View
            android:id="@+id/hruleF"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray_med"
            android:layout_alignParentTop="true"
            />
        <ImageButton
            android:id="@+id/btn_add_set"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/ic_action_add_green"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <NumberPicker
            android:id="@+id/np_weight"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:divider="#ee99ee"
            />
        <NumberPicker
            android:id="@+id/np_reps"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:scrollIndicators="left"
            />
    </LinearLayout>


    <!--Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:layout_alignParentBottom="true"/-->


</RelativeLayout>