<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- main activity scheme -->
    <style name="GoGymTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.GoGym</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.GoGym" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
        <item name="android:logo">@mipmap/ic_launcher</item>
    </style>

    <style name="WorkoutListStyle"></style>

    <style name="WrkSetWarm">
        <item name="android:background">#ccffcc</item>
        <item name="android:textColor">#646464</item>
    </style>
    <style name="WrkSetWork">
        <item name="android:background">#ccccff</item>
        <item name="android:textColor">#646464</item>
    </style>

    <style name="ExcersiseListStyle"></style>

</resources>
