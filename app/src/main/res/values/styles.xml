<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <!-- main activity scheme -->
    <style name="GoGymTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.GoGym</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.GoGym" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_logo</item>
        <item name="title">Gym</item>
    </style>


    <style name="WorkoutListStyle"></style>

    <style name="ExcersiseListStyle"></style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/B3</item>
        <item name="android:textColorSecondary">@color/B3</item>
    </style>

    <style name="ToggleSwitchTheme" parent="android:Theme.Holo.Light">
        <item name="colorAccent">@color/B3</item>
    </style>

</resources>
